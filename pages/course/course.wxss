/* pages/course/course.wxss */
page {
  width: 100%;
  height: 100%;
}
.container {
  width: 750rpx;
  height: 100%;
  background-color: green;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.course-menu {
  width: 750rpx;
  height: 88rpx;
  display: flex;
  flex-direction: row;
}
.course-menu-item-normal {
  width: 50%;
  color: lightgray;
  background-color: greenyellow;
  display: flex;
  justify-content: center;
  align-items: center;
}
.course-menu-item-selected {
  width: 50%;
  color: red;
  background-color: blueviolet;
  display: flex;
  justify-content: center;
  align-items: center;
}
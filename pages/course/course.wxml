<!--pages/course/course.wxml-->

<view class='course-menu'>
  <view class="{{futureIsSelected ?'course-menu-item-selected':'course-menu-item-normal'}}" bindtap='onFutureClick'>未上课程</view>
  <view class="{{futureIsSelected ?'course-menu-item-normal':'course-menu-item-selected'}}" bindtap='onHistoryClick'>已上课程</view>
</view>
<view>
  <scroll-view scroll-y='true' style="height: {{contentHeight}}px;">
    <view wx:if="{{isEmpty}}">
      <view>没有相关课程</view>
    </view>
    <view wx:else>
      <view wx:for="{{courses}}">{{item.bookingId}}
        <view class='course-item'>
          <text class='course-item-time'>{{item.time}}</text>
          <text class='course-item-name'>{{item.chapterName}}</text>
          <text class='course-item-chapter'>{{item.chapter}}</text>
        </view>
      </view>
    </view>
  </scroll-view>
</view>